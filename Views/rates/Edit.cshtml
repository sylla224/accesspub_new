@model accesspubnew.Models.rate

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<script src="~/lib/bootstrap/dist/js/bootstrap-datepicker.js"></script>
<link href="~/lib/bootstrap/css/bootstrap-datepicker.css" rel="stylesheet" />
<h1>Modifier le taux</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="rate_code" class="control-label"></label>
                <input asp-for="rate_code" class="form-control" />
                <span asp-validation-for="rate_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rate_achat" class="control-label"></label>
                <input asp-for="rate_achat" class="form-control" />
                <span asp-validation-for="rate_achat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rate_vente" class="control-label"></label>
                <input asp-for="rate_vente" class="form-control" />
                <span asp-validation-for="rate_vente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_jour" class="control-label"></label>
                <input asp-for="date_jour" class="form-control" data-provide="datepicker" data-date-format="dd-M-yyyy" data-date-today-highlight="true" />
                <span asp-validation-for="date_jour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

